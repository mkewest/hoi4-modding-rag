# .env.example - Copy to .env and customize

# Paths
KNOWLEDGE_BASE_PATH=./data/raw
VECTORDB_PATH=./vectordb
MODEL_CACHE_PATH=./models

# Embedding settings
USE_FP16=true
DEVICE=cuda  # or 'cpu' or 'mps' for Apple Silicon

# Retrieval settings
TOP_K_DENSE=50
TOP_K_SPARSE=50
TOP_K_FINAL=10
RRF_K=60

# MCP Server settings
MCP_SERVER_NAME=hoi4-modding-rag
MCP_LOG_LEVEL=INFO

# Development
DEBUG=false
